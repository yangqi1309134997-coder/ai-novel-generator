# =============================================================================
# AI 小说创作工具环境变量配置示例
# 复制此文件为 .env 并填入实际值
# =============================================================================

# === Web 服务配置 ===
# 服务器主机地址
HOST=0.0.0.0
# 服务器端口
PORT=8000
# 并发工作线程数
CONCURRENCY=4
# 工作模式 (development, production, testing)
MODE=development

# === API 密钥配置 ===
# OpenAI API 密钥
OPENAI_API_KEY=your_openai_api_key_here
# OpenAI 自定义 API 基础URL（可选）
OPENAI_BASE_URL=https://api.openai.com/v1

# GLM API 密钥
GLM_API_KEY=your_glm_api_key_here
# GLM 自定义 API 基础URL（可选）
GLM_BASE_URL=https://open.bigmodel.cn/api/paas/v4

# Claude API 密钥
CLAUDE_API_KEY=your_claude_api_key_here
# Claude 自定义 API 基础URL（可选）
CLAUDE_BASE_URL=https://api.anthropic.com

# 本地模型 API 密钥（如需要）
LOCAL_MODEL_API_KEY=your_local_model_api_key_here
# 本地模型服务地址
LOCAL_MODEL_URL=http://localhost:11434

# === 数据库配置 ===
# 数据库类型 (sqlite, mysql, postgresql)
DB_TYPE=sqlite
# SQLite 数据库文件路径
DB_PATH=data/novel_generator.db

# MySQL 配置（如果使用 MySQL）
# DB_HOST=localhost
# DB_PORT=3306
# DB_NAME=novel_generator
# DB_USER=root
# DB_PASSWORD=your_mysql_password

# Redis 配置（用于缓存）
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=your_redis_password
REDIS_DB=0

# === 调试配置 ===
# 是否显示详细错误信息
SHOW_ERRORS=false
# 日志级别 (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO
# 是否启用调试模式
DEBUG_MODE=false
# 是否跟踪请求
TRACE_REQUESTS=false

# === 缓存配置 ===
# 是否启用缓存
CACHE_ENABLED=true
# 缓存类型 (file, memory, redis)
CACHE_TYPE=file
# 缓存目录路径
CACHE_LOCATION=cache
# 缓存过期时间（秒）
CACHE_TTL=3600
# 缓存最大大小
CACHE_MAX_SIZE=100MB

# === 安全配置 ===
# JWT 密钥（用于用户认证）
JWT_SECRET_KEY=your_jwt_secret_key_here_change_this_in_production
# JWT 过期时间（小时）
JWT_EXPIRATION_HOURS=24
# 是否启用 CORS
ENABLE_CORS=true
# 允许的源（逗号分隔）
ALLOWED_ORIGINS=*

# === 导出配置 ===
# 默认导出格式
DEFAULT_EXPORT_FORMAT=markdown
# 输出目录
OUTPUT_DIRECTORY=output
# 模板目录
TEMPLATE_DIRECTORY=templates

# === 生成参数配置 ===
# 生成温度
TEMPERATURE=0.7
# Top P 值
TOP_P=0.9
# 最大令牌数
MAX_TOKENS=4000
# 频率惩罚
FREQUENCY_PENALTY=0.1
# 存在惩罚
PRESENCE_PENALTY=0.1

# === 项目管理配置 ===
# 是否启用自动保存
AUTO_SAVE_ENABLED=true
# 自动保存间隔（秒）
AUTO_SAVE_INTERVAL=300
# 备份保留天数
BACKUP_KEEP_DAYS=30
# 项目模板目录
PROJECT_TEMPLATES_DIR=project_templates

# === 插件配置 ===
# 是否启用插件
PLUGINS_ENABLED=true
# 插件目录
PLUGINS_DIRECTORY=plugins
# 是否自动加载插件
AUTO_LOAD_PLUGINS=true

# === 监控配置 ===
# 是否启用监控
MONITORING_ENABLED=false
# 指标端口
METRICS_PORT=8080
# 健康检查间隔（秒）
HEALTH_CHECK_INTERVAL=30

# === 邮件配置（可选）===
# SMTP 服务器
SMTP_SERVER=smtp.gmail.com
# SMTP 端口
SMTP_PORT=587
# SMTP 用户名
SMTP_USERNAME=your_email@gmail.com
# SMTP 密码
SMTP_PASSWORD=your_app_password
# 发送者邮箱
FROM_EMAIL=your_email@gmail.com

# === 第三方服务配置 ===
# Google OAuth 配置
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret

# GitHub OAuth 配置
GITHUB_CLIENT_ID=your_github_client_id
GITHUB_CLIENT_SECRET=your_github_client_secret

# 文件上传配置
# 最大文件大小（MB）
MAX_FILE_SIZE=10
# 允许的文件类型
ALLOWED_FILE_TYPES=txt,docx,pdf,epub

# === 性能配置 ===
# 内存限制（MB）
MEMORY_LIMIT=1024
# CPU 使用限制（百分比）
CPU_LIMIT=80
# 是否启用性能分析
ENABLE_PROFILING=false

# === 备份配置 ===
# 是否启用自动备份
BACKUP_ENABLED=true
# 备份目录
BACKUP_LOCATION=backups
# 备份计划 (daily, weekly, monthly)
BACKUP_SCHEDULE=daily
# 备份保留天数
BACKUP_KEEP_DAYS=30

# === 日志配置 ===
# 日志文件路径
LOG_FILE=logs/novel_generator.log
# 是否输出到控制台
CONSOLE_OUTPUT=true
# 日志轮转大小
LOG_MAX_SIZE=10MB
# 日志备份数量
LOG_BACKUP_COUNT=5

# === 开发环境配置 ===
# 开发环境专用配置
FLASK_ENV=development
FLASK_DEBUG=true
# 热重载
FLASK_RELOADER=true

# === 生产环境配置 ===
# 生产环境专用配置
# GUNICORN_WORKERS=4
# GUNICORN_TIMEOUT=120
# GUNICORN_KEEPALIVE=5

# === 测试环境配置 ===
# 测试环境专用配置
TESTING=false
TEST_DATABASE_URL=sqlite:///test_novel_generator.db