# === API 密钥配置 ===
# OpenAI API 密钥
OPENAI_API_KEY=your_openai_api_key_here
# OpenAI 自定义 API 基础URL（可选）
OPENAI_BASE_URL=https://api.openai.com/v1

# GLM API 密钥
GLM_API_KEY=your_glm_api_key_here
# GLM 自定义 API 基础URL（可选）
GLM_BASE_URL=https://open.bigmodel.cn/api/paas/v4

# Claude API 密钥
CLAUDE_API_KEY=your_claude_api_key_here
# Claude 自定义 API 基础URL（可选）
CLAUDE_BASE_URL=https://api.anthropic.com

# 本地模型 API 密钥（如需要）
LOCAL_MODEL_API_KEY=your_local_model_api_key_here
# 本地模型服务地址
LOCAL_MODEL_URL=http://localhost:11434

# === 系统配置 ===
# Web 服务配置
HOST=0.0.0.0
PORT=8000
CONCURRENCY=4
MODE=development

# 数据库配置
DB_TYPE=sqlite
DB_PATH=data/novel_generator.db

# Redis 配置（可选）
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=your_redis_password

# === 日志配置 ===
LOG_LEVEL=INFO
LOG_FILE=logs/novel_generator.log
CONSOLE_OUTPUT=true

# === 安全配置 ===
JWT_SECRET_KEY=your_jwt_secret_key_here_change_this_in_production
JWT_EXPIRATION_HOURS=24
ENABLE_CORS=true
ALLOWED_ORIGINS=*

# === 生成参数配置 ===
TEMPERATURE=0.7
TOP_P=0.9
MAX_TOKENS=4000
FREQUENCY_PENALTY=0.1
PRESENCE_PENALTY=0.1

# === 项目管理配置 ===
AUTO_SAVE_ENABLED=true
AUTO_SAVE_INTERVAL=300
BACKUP_KEEP_DAYS=30
PROJECT_TEMPLATES_DIR=project_templates

# === 导出配置 ===
DEFAULT_EXPORT_FORMAT=markdown
OUTPUT_DIRECTORY=output
TEMPLATE_DIRECTORY=templates

# === 插件配置 ===
PLUGINS_ENABLED=true
PLUGINS_DIRECTORY=plugins
AUTO_LOAD_PLUGINS=true

# === 监控配置 ===
MONITORING_ENABLED=false
METRICS_PORT=8080
HEALTH_CHECK_INTERVAL=30

# === 邮件配置（可选）===
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your_email@gmail.com
SMTP_PASSWORD=your_app_password
FROM_EMAIL=your_email@gmail.com

# === 第三方服务配置 ===
# Google OAuth 配置
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret

# GitHub OAuth 配置
GITHUB_CLIENT_ID=your_github_client_id
GITHUB_CLIENT_SECRET=your_github_client_secret

# === 文件上传配置 ===
MAX_FILE_SIZE=10
ALLOWED_FILE_TYPES=txt,docx,pdf,epub

# === 性能配置 ===
MEMORY_LIMIT=1024
CPU_LIMIT=80
ENABLE_PROFILING=false

# === 备份配置 ===
BACKUP_ENABLED=true
BACKUP_LOCATION=backups
BACKUP_SCHEDULE=daily
BACKUP_KEEP_DAYS=30

# === 开发环境配置 ===
FLASK_ENV=development
FLASK_DEBUG=true
FLASK_RELOADER=true

# === 生产环境配置 ===
# GUNICORN_WORKERS=4
# GUNICORN_TIMEOUT=120
# GUNICORN_KEEPALIVE=5

# === 测试环境配置 ===
TESTING=false
TEST_DATABASE_URL=sqlite:///test_novel_generator.db
